@model PL_Checker.Pages.Medicines.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine.Name" class="control-label"></label>
                <input asp-for="Medicine.Name" class="form-control" />
                <span asp-validation-for="Medicine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.PL_Number" class="control-label"></label>
                <input asp-for="Medicine.PL_Number" class="form-control" />
                <span asp-validation-for="Medicine.PL_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.ImageUrl" class="control-label"></label>
                <input asp-for="Medicine.ImageUrl" class="form-control" />
                <span asp-validation-for="Medicine.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input name="__RequestVerificationToken" type="hidden"
                       value="<Antiforgery token here>" />
            </div>
        </form>
    </div>
</div>

